<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')%>
<body>
    <!-- NAV -->
    <%- include('./partials/nav')%>

    <!-- Header -->
    <%- include('./partials/header')%>  

 <!-- Menu Section -->
 <div class="ps-row ps-padding-64" id="menu">
    <div class="ps-col l6 ps-padding-large">

      <h1 class="ps-center">Nuentro Menu</h1>
      <br />
      <% for (let i=0; i<productos.length; i++) { %>
        <h4><%= productos[i].name %></h4>
        <p class="ps-text-grey">
          <%= productos[i].desc %> </p>
        <p>  <%= productos[i].price %> </p>
        <br />
      <% } %>
      

    </div>

    <div class="ps-col l6 ps-padding-large ps-img-menu">
      <img
        src="/images/menu.jpg"
        class="ps-round ps-image ps-opacity-min"
        alt="Menu"
      />
    </div>
  </div>

  <!-- Footer -->
  <%- include('./partials/footer')%> 
</div>

</body>
</html>
